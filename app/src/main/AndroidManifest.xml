<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nyp.sit.movieviewer_intermediate_starter_project">

    <application
        android:name=".MyMovies"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieViewer_Intermediate_Starter_Project">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
             />
        <activity
            android:name=".VerificationActivity"
             />
        <activity
            android:name=".ViewListOfMoviesActivity"
            android:theme="@style/AppTheme.NoActionBar"
             />
        <activity
            android:name=".ItemDetailActivity"
            android:parentActivityName=".ViewListOfMoviesActivity"
             />
        <activity
            android:name=".FavouriteListOfMoviesActivity"
            />
    </application>

</manifest>